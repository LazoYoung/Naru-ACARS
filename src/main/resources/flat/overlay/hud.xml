<overlay name="HUD" background="hud.png">
    <icon file="icon/flight.png" color="white" x="90" y="60" width="50" height="50"/>
    <label x="170" y="65" size="32" color="white">
        <animate type="slide" interval="5">
            <simvar>callsign</simvar>
            <simvar>airline_icao</simvar>
            <simvar>aircraft_name</simvar>
        </animate>
    </label>
    <icon file="icon/phase.png" color="white" x="1430" y="63" width="40" height="40"/>
    <label x="1490" y="65" size="32" color="white">
        <simvar>phase</simvar>
    </label>
</overlay>